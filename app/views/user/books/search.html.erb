<%= form_tag(user_books_search_path, method: :get) do %>
  <%= text_field_tag :title, @title %>
  <%= button_tag type: "submit" %>
<% end %>

<table>
<% if @books %>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.book_image_url %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
  </tr>
  <% end %>
<% end %>
</table>