<div class="container">
  <% @post.book.inspect %>
  <h5><%= @post.book.title %></h5><br>
  <h5><%= @post.book.author %></h5><br>
  <div style="text-align: center">
    <%= image_tag @post.book.book_image_url, size: '230x300' %><br>
  </div>
  <div class="row my-2">
    <table class="table table-hover">
      <thead>
        <th class="text-center">感想</th>
        <th class="text-center">読了時間</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <td class="text-center col-7"><%= @post.comment %></td>
        <td class="text-center col-2"><%= @post.readingtime %></td>
        <td class="text-center col-2"><%= @tag.tagname %></td>
        <td class="text-center"><% if @post.user == current_user %>
              <%= link_to '編集', edit_public_post_path(@post.id), class: "btn btn-sm btn-success" %>
              <%= link_to '削除', public_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            <% end %></td>
      </tbody>
</div>
