<div class="container">
  <h3>新規会員登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field text-center my-2">
      <%= f.label :ニックネーム %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field text-center my-2">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field text-center my-2">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field text-center my-2">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions text-center my-2">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <h6 class="text-center my-2">既に登録済みの方
  <%= link_to 'こちら', new_user_session_path %>からログインしてください</h6>
</div>
