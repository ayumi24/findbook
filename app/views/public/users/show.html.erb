<div class="container">
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
    <% if @user == current_user %>
      <h3>マイページ</h3>
    <% else %>
      <h3><%= @user.name %>さんのユーザーページ</h3>
    <% end %>
      <%= image_tag @user.get_profile_image(90,90) %>
      <strong class="ml-3">ニックネーム：</strong><%= @user.name %><br>
    <% if @user == current_user %>
      <%= link_to '情報を編集する', edit_public_user_path, class: "btn btn-sm btn-primary" %>
    <% end %>
<h4 class="mt-3">レビューした書籍</h4>
  <% if @user == current_user %>
   <%= link_to '新しく本を探す', public_books_search_path, class: "btn btn-sm btn-dark" %>
  <% end %>
  <table class="mt-4">
    <thead>
      <th class="text-center col-5">タイトル</th>
      <th class="text-center col-5">著者</th>
      <th class="text-center col-2">レビュー詳細</th>
    </thead>
    <tbody>
      <% @books.each do |books| %>
      <tr>
      <td class="text-center"><%= link_to public_book_path(books.id) do %>
      <%= image_tag books.book_image_url, size: '150x200' %><br>
      <%= books.title %>
      <% end %></td>
      <td class="text-center"><%= books.author %></td>
      <td class="text-center"><%= link_to '詳細', public_post_path(posts_user_id(books.posts, @user.id)) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


