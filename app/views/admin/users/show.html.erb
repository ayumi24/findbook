<div class="container">
  <div class="row my-2">
    <h3><%= @user.name %>さんのユーザー情報</h3>
  </div>
    <div class="row mx-2">
      <div class="col-2">
        会員ID
      </div>
      <div class="col-2">
        <%= @user.id %>
      </div>
    </div>
    <div class="row mx-2 mt-2">
      <div class="col-2">
        ニックネーム
      </div>
      <div class="col-2">
        <%= @user.name %>
      </div>
    </div>
    <div class="row mx-2 mt-2">
      <div class="col-2">
        メールアドレス
      </div>
      <div class="col-4">
        <%= @user.email %>
      </div>
    </div>
    <div class="row mx-2 mt-2">
      <div class="col-2">
        会員ステータス
      </div>
      <div class="col-2">
        <% if @user.is_deleted == false %>
          有効
        <% else %>
          退会
        <% end %>
      </div>
    </div>
    <div class="row mx-2 mt-2">
      <div class="col-2">
        <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-sm btn-primary" %>
      </div>
    </div>
</div>